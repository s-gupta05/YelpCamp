<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add new comment to <%= cgs.name %> </h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/campgrounds/<%= cgs._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" name="comment[text]" type="text" placeholder="text">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/campgrounds/<%= cgs._id %>">Go back!</a>
		</div>
	</div>

</div>



<%- include("../partials/footer") %>